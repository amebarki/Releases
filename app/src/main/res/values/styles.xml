<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/toolbar_background</item>
        <item name="android:titleTextColor" tools:targetApi="m">@color/colorOrangered</item>
    </style>


    <style name="BlackText">
        <item name="android:fontFamily">@font/jacques_francois_shadow</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorTransparentGrey</item>
        <item name="colorControlActivated">@color/colorTransparentGreen</item>
    </style>


</resources>
