<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/manga_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<ImageView
    android:id="@+id/manga_cover_tome_image_view"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toTopOf="@id/manga_root_view"
    app:layout_constraintBottom_toTopOf="@id/manga_title_tome_text_view"
    />

    <TextView
        android:id="@+id/manga_title_tome_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/manga_root_view"
       />


</android.support.constraint.ConstraintLayout>