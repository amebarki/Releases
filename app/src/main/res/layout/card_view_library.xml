<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/library_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"


    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/library_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/library_title_text_view"
            style="@style/BlackText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="20dp"
            android:textSize="30sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@id/library_constraint_layout"
            app:layout_constraintEnd_toStartOf="@+id/library_delete_checkbox"
            app:layout_constraintStart_toStartOf="@id/library_constraint_layout"
            app:layout_constraintTop_toTopOf="@id/library_constraint_layout"
            tools:text="example of text of card view" />

        <CheckBox
            android:id="@+id/library_delete_checkbox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@id/library_constraint_layout"
            app:layout_constraintTop_toTopOf="@id/library_constraint_layout"
            app:layout_constraintEnd_toEndOf="@id/library_constraint_layout"
            android:button="@drawable/selector_manga"
            android:checked="true"
            />

    </android.support.constraint.ConstraintLayout>




</android.support.v7.widget.CardView>