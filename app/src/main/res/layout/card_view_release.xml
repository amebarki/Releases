<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/release_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"

    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/release_title_text_view_card"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            style="@style/BlackText"
            android:textSize="20sp"
            tools:text="example of text of card view" />

        <ImageView
            android:id="@+id/release_image_card"
            android:layout_width="145dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            tools:src="@drawable/splash_logo" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:fillViewport="true">
            <TextView
                android:id="@+id/release_summary_text_view_card"
                style="@style/BlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jacques_francois"
                android:scrollbars="vertical"
                tools:text="example of text of card view" />
        </android.support.v4.widget.NestedScrollView>


        <TextView
            android:id="@+id/release_category_text_view_card"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            style="@style/BlackText"
            android:textSize="20sp"
            tools:text="example of text of card view"

            />

        <CheckBox
            android:id="@+id/release_favorite_checkbox_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:button="@drawable/favorite_button" />

    </LinearLayout>


</android.support.v7.widget.CardView>