<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:background="@drawable/navigation_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/dialog_title"
            android:src="@drawable/ic_sorting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dialog_title_alp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_alphabetic" />

        <ToggleButton
            android:id="@+id/dialog_toggle_alp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOff="@string/dialog_alp_desc"
            android:textOn="@string/dialog_alp_asc"/>


    </LinearLayout>

</ScrollView>